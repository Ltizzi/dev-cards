{
  appId: "com.devcards.desktop",
  productName: "DevCards Desktop",
  asarUnpack: ["backend/**"],
  directories: {
    output: "release",
  },
  files: ["dist/**/*", "dist-electron/**/*", "public/card.png"],
  extraResources: [
    {
      from: "backend",
      to: "backend",
      filter: ["**/*"],
    },
  ],
  mac: {
    target: ["dmg"],
  },
  win: {
    target: ["nsis"],
  },
  linux: {
    icon: "public/card.png",
    target: ["AppImage"],
  },
}
